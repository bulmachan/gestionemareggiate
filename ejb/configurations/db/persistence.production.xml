		<class>it.epocaricerca.geologia.model.Allegato</class>
		<class>it.epocaricerca.geologia.model.EventoCostiero</class>
		<class>it.epocaricerca.geologia.model.CondizioneMeteo</class>
		<class>it.epocaricerca.geologia.model.Impatto</class>
		<class>it.epocaricerca.geologia.model.PrevisioneImpatto</class>
		<class>it.epocaricerca.geologia.model.ImpattoReale</class>
		<class>it.epocaricerca.geologia.model.Localita</class>
		<class>it.epocaricerca.geologia.model.Danno</class>
		<class>it.epocaricerca.geologia.model.Altezza</class>
		<class>it.epocaricerca.geologia.model.Tendenza</class>
		<class>it.epocaricerca.geologia.model.Provenienza</class>
		<class>it.epocaricerca.geologia.model.Estensione</class>
		<class>it.epocaricerca.geologia.model.MacroArea</class>
		<class>it.epocaricerca.geologia.model.Fenomeno</class>
		<class>it.epocaricerca.geologia.model.TipoAllegato</class>
		<class>it.epocaricerca.geologia.model.TipoDanno</class>
		<class>it.epocaricerca.geologia.model.RelazioneSTB</class>
		<class>it.epocaricerca.geologia.model.StatoRelazione</class>
		<class>it.epocaricerca.geologia.model.STB</class>
		<class>it.epocaricerca.geologia.model.DannoSTB</class>
		<class>it.epocaricerca.geologia.model.Mareggiata</class>
		<class>it.epocaricerca.geologia.model.RelazioneGeneraleSTB</class>
		<class>it.epocaricerca.geologia.model.VariabileStazione</class>
		<class>it.epocaricerca.geologia.model.Stazione</class>
		<class>it.epocaricerca.geologia.model.Rilevazione</class>
		<class>it.epocaricerca.geologia.model.DatoSensore</class>
		<class>it.epocaricerca.geologia.model.auth.User</class>
		<class>it.epocaricerca.geologia.model.auth.Role</class>
		<class>it.epocaricerca.geologia.model.Comune</class>
		<class>it.epocaricerca.geologia.model.MicroLocalita</class>
		<class>it.epocaricerca.geologia.model.PrevisioneDanno</class>
		<class>it.epocaricerca.geologia.model.LivelloCriticita</class>
		<class>it.epocaricerca.geologia.model.Indirizzo</class>
		<class>it.epocaricerca.geologia.model.Fonte</class>	
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.charSet" value="UTF-8" />
			<property name="hibernate.show_sql" value="false" />
		</properties>

	</persistence-unit>

</persistence>
